# ====================================
# CashFlip PRODUCTION Environment
# ====================================
# Copy to production.env, fill in values, then deploy with:
#   ./scripts/deploy-prod.sh --init --env production.env
#
# WARNING: Do NOT use staging values here. Production has
# different prefixes, domains, and database credentials.
# ====================================

# Django
SECRET_KEY=GENERATE_A_NEW_SECRET_KEY_HERE
DEBUG=False
ALLOWED_HOSTS=cashflip.amoano.com,manage.cashflip.amoano.com,console.cashflip.amoano.com
ADMIN_DOMAIN=manage.cashflip.amoano.com

# Database (Azure PostgreSQL Flexible Server)
# Format: postgres://USER:PASSWORD@HOST:5432/DB_NAME?sslmode=require
DATABASE_URL=postgres://cashflip_admin:DB_PASSWORD_HERE@cashflip-postgres.postgres.database.azure.com:5432/cashflip_db?sslmode=require

# Redis (Azure Cache for Redis)
# Format: rediss://:ACCESS_KEY@HOSTNAME:6380/0
REDIS_URL=rediss://:REDIS_ACCESS_KEY_HERE@cashflip-redis.redis.cache.windows.net:6380/0
CELERY_BROKER_URL=rediss://:REDIS_ACCESS_KEY_HERE@cashflip-redis.redis.cache.windows.net:6380/1
CELERY_RESULT_BACKEND=rediss://:REDIS_ACCESS_KEY_HERE@cashflip-redis.redis.cache.windows.net:6380/2

# CORS
CORS_ALLOWED_ORIGINS=https://cashflip.amoano.com,https://manage.cashflip.amoano.com,https://console.cashflip.amoano.com
CSRF_TRUSTED_ORIGINS=https://cashflip.amoano.com,https://manage.cashflip.amoano.com,https://console.cashflip.amoano.com

# Domain
BACKEND_DOMAIN=https://cashflip.amoano.com
SITE_URL=https://cashflip.amoano.com

# ============ Payment Configuration ============
# Orchard API (CTM - deposits)
ORCHARD_API_URL=https://apikyempe.eddievolt.com/orders/orchard-proxy/
ORCHARD_SERVICE_ID=4208
ORCHARD_CLIENT_ID=YOUR_ORCHARD_CLIENT_ID_HERE
ORCHARD_SECRET_KEY=YOUR_ORCHARD_SECRET_KEY_HERE
ORCHARD_CALLBACK_URL=https://apikyempe.eddievolt.com/orders/orchard-callback/

# Orchard WANAOWN (MTC - payouts/withdrawals)
ORCHARD_API_URL_WANAOWN=https://apikyempe.eddievolt.com/orders/orchard-proxy/
ORCHARD_SERVICE_ID_WANAOWN=4152
ORCHARD_CLIENT_ID_WANAOWN=YOUR_ORCHARD_CLIENT_ID_WANAOWN_HERE
ORCHARD_SECRET_KEY_WANAOWN=YOUR_ORCHARD_SECRET_KEY_WANAOWN_HERE
ORCHARD_CALLBACK_URL_WANAOWN=https://apikyempe.eddievolt.com/orders/orchard-callback/

# Orchard Proxy for Verification
ORCHARD_PROXY_URL=https://apikyempe.eddievolt.com/orders/orchard-verification/

# Paystack (card payments)
PAYSTACK_SECRET_KEY=sk_live_YOUR_PAYSTACK_SECRET_KEY_HERE
PAYSTACK_PUBLIC_KEY=pk_live_YOUR_PAYSTACK_PUBLIC_KEY_HERE
PAYSTACK_CALLBACK_URL=https://dashboard.10nearby.com/users/paystack-callback/
PAYSTACK_WEBHOOK_URL=https://dashboard.10nearby.com/users/paystack-webhook/

# PRODUCTION Payment Reference Prefixes (different from staging!)
# Staging uses: CF-PS-, CF-DEP-, CF-PAY-
# Production uses: CFP-PS-, CFP-DEP-, CFP-PAY-
PAYMENT_PREFIX_PAYSTACK=CFP-PS-
PAYMENT_PREFIX_DEPOSIT=CFP-DEP-
PAYMENT_PREFIX_PAYOUT=CFP-PAY-

# ============ Auth Configuration ============
# WhatsApp OTP
WHATSAPP_ACCESS_TOKEN=YOUR_WHATSAPP_ACCESS_TOKEN_HERE
